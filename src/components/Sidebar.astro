---
import Button from "./Button.astro";
---

<aside>
  <section>
    <div>
      <h2>Create your first playlist</h2>
      <p>It's easy, we'll help you</p>
    </div>
    <Button size="small">Create playlist</Button>
  </section>

  <section>
    <div>
      <h2>Create your first playlist</h2>
      <p>It's easy, we'll help you</p>
    </div>
    <Button size="small">Create playlist</Button>
  </section>
</aside>

<style>
  aside {
    padding: 1rem;
    border-radius: 8px;
    grid-column: 1;
    background: var(--bg-base);
  }

  section {
    background: #1f1f1f;
    border-radius: 8px;
    gap: 20px;
    margin: 8px 0;
    padding: 16px 20px;

    display: grid;
    gap: var(--space-md);
    place-items: start;
  }

  div {
    display: grid;
    gap: var(--space-xs);
  }

  h2 {
    color: #fff;
    font-weight: 500;
    font-size: 1rem;
    line-height: 1.2;
  }

  p {
    color: #fff;
    font-size: 0.8rem;
  }
</style>
